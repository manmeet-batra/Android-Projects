<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/list_inflate_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_image" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:background="@drawable/customer_service_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/list_inflate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/listinflate_name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/list_inflate_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_inflate_name"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/listinflate_services"
            android:textColor="@android:color/black" />
    </RelativeLayout>

</RelativeLayout>